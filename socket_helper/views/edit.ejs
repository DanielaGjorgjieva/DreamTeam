<main>
    <h1>Song Edit Form</h1>
    <div class="form-div">
        <form method="POST" id="<%=result._id%>" action="/songs/<%=result._id%>?_method=PUT" encType="multipart/form-data" class="upload-form">
            <label>Title</label>
            <input type="text" name="title" placeholder="Title of the song" value="<%= result.title %>" />

            <label>Artist</label>
            <input type="text" name="artist" placeholder="Artist of the song" value="<%= result.artist %>" />

            <label>Album</label>
            <input type="text" name="album" placeholder="Album of the song" value="<%= result.album %>"/>

            <label>Genre</label>
            <select name="genre">
                <option value="Pop">Pop</option>
                <option value="Rnb">RnB</option>
                <option value="Rap">Rap</option>
                <option value="Rock">Rock</option>
                <option value="Classical">Classical</option>
            </select>

            <label>Description</label>
            <textarea name="desc" cols="30" rows="3" placeholder="Put a description of the song..." value="<%= result.desc %>"></textarea>

            <label>Input File</label>
            <input type="file" name="filename" value="<%= result.filename %>" />

            <label for="customCbox">Favorite</label>
            <input type="checkbox" id="customCbox" name="favorite">

            <label>Quality</label>
            <input type="range" name="quality" min="1" max="10" value="<%=result.quality %>">

            <span></span>
            <input type="submit" value="Submit">
        </form>
    </div>
    <button id="closebtn"> Close Edit Form</button>
</main>